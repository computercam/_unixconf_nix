# https://github.com/baskerville/shkd/blob/master/keycodes.c
# https://github.com/koekeishiya/yabai/wiki/Commands#message-passing-interface
# https://github.com/koekeishiya/skhd/issues/1#issue-177177268

ctrl - up : $HOME/scripts/yabaictl focus north
ctrl - down : $HOME/scripts/yabaictl focus south
ctrl - left : $HOME/scripts/yabaictl focus west
ctrl - right : $HOME/scripts/yabaictl focus east

ctrl + shift - up : $HOME/scripts/yabaictl move north
ctrl + shift - down : $HOME/scripts/yabaictl move south
ctrl + shift - left : $HOME/scripts/yabaictl move west
ctrl + shift - right : $HOME/scripts/yabaictl move east

ctrl + cmd - up : $HOME/scripts/yabaictl resize north
ctrl + cmd - down : $HOME/scripts/yabaictl resize south
ctrl + cmd - left : $HOME/scripts/yabaictl resize west
ctrl + cmd - right : $HOME/scripts/yabaictl resize east

ctrl - 0x21 : /opt/homebrew/bin/yabai -m space --rotate 90
ctrl - 0x1E : /opt/homebrew/bin/yabai -m space --rotate 270
ctrl - home : /opt/homebrew/bin/yabai -m space --balance

ctrl - return : $HOME/scripts/spawn_iterm
ctrl - delete : /opt/homebrew/bin/yabai -m window --close
ctrl - 0x33 : /opt/homebrew/bin/yabai -m window --close

ctrl - 1 : /opt/homebrew/bin/yabai -m space --focus 1
ctrl + shift - 1 : /opt/homebrew/bin/yabai -m window --space 1 && /opt/homebrew/bin/yabai -m space --focus 1
ctrl - 2 : /opt/homebrew/bin/yabai -m space --focus 2
ctrl + shift - 2 : /opt/homebrew/bin/yabai -m window --space 2 && /opt/homebrew/bin/yabai -m space --focus 2
ctrl - 3 : /opt/homebrew/bin/yabai -m space --focus 3
ctrl + shift - 3 : /opt/homebrew/bin/yabai -m window --space 3 && /opt/homebrew/bin/yabai -m space --focus 3
ctrl - 4 : /opt/homebrew/bin/yabai -m space --focus 4
ctrl + shift - 4 : /opt/homebrew/bin/yabai -m window --space 4 && /opt/homebrew/bin/yabai -m space --focus 4
ctrl - 5 : /opt/homebrew/bin/yabai -m space --focus 5
ctrl + shift - 5 : /opt/homebrew/bin/yabai -m window --space 5 && /opt/homebrew/bin/yabai -m space --focus 5
ctrl - 6 : /opt/homebrew/bin/yabai -m space --focus 6
ctrl + shift - 6 : /opt/homebrew/bin/yabai -m window --space 6 && /opt/homebrew/bin/yabai -m space --focus 6
ctrl - 7 : /opt/homebrew/bin/yabai -m space --focus 7
ctrl + shift - 7 : /opt/homebrew/bin/yabai -m window --space 7 && /opt/homebrew/bin/yabai -m space --focus 7
ctrl - 8 : /opt/homebrew/bin/yabai -m space --focus 8
ctrl + shift - 8 : /opt/homebrew/bin/yabai -m window --space 8 && /opt/homebrew/bin/yabai -m space --focus 8
ctrl - 9 : /opt/homebrew/bin/yabai -m space --focus 9
ctrl + shift - 9 : /opt/homebrew/bin/yabai -m window --space 9 && /opt/homebrew/bin/yabai -m space --focus 9
ctrl - 0 : /opt/homebrew/bin/yabai -m space --focus 10
ctrl + shift - 0 : /opt/homebrew/bin/yabai -m window --space 10 && /opt/homebrew/bin/yabai -m space --focus 10
