{
  "title": "Fix Terminal Shortcuts After Swap CMD with CTRL",
  "rules": [
    {
      "description": "Terminal: CMD + SHIFT + X to CMD + X",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": { "mandatory": ["left_gui", "left_shift"] },
            "key_code": "x"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "description": "",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^io\\.alacritty$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "to": [{ "repeat": true, "modifiers": ["left_gui"], "key_code": "x" }]
        }
      ]
    },
